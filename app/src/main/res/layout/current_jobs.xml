                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="Job 1 Details"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/dropdown1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:text="▼"
                    android:textColor="#0868a0"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jobDetails1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/job1Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: John Doe\nLocation: 114 N 1st St, Eldridge, IA 52748\nDescription: Package delivery"
