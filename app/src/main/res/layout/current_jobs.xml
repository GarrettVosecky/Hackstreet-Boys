    </ScrollView>

    <!-- Add Job Fragment Container (overlay, starts hidden) -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:name="com.example.hackstreet_boys.AddFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="#B3000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <!-- Floating Action Button: Add New Job -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add new job"
        app:layout_constraintBottom_toTopOf="@id/completedjobs"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <!-- Completed Jobs Button -->
    <Button
        android:id="@+id/completedjobs"
        android:layout_width="213dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:text="completed jobs"
        android:textSize="23sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
