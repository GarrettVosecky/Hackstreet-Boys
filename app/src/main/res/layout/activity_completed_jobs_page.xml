<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompletedJobsPage">

    <!-- Title -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed Jobs"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Jobs Container -->
    <LinearLayout
        android:id="@+id/jobsContainer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Job 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0868a0"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="Job 1 Details"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:paddingLeft="12dp"/>

            <Button
                android:id="@+id/dropdown1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="▼"
                android:textColor="#0868a0"
                android:textSize="30sp" />
        </LinearLayout>

        <!-- Job 1 Details (Initially Hidden) -->
        <TextView
            android:id="@+id/jobDetails1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Name: ... \n Location: ...  \n Description: ..."
            android:textSize="18sp"
            android:textColor="#000000"
            android:padding="12dp"
            android:visibility="gone"/>

        <!-- Job 2 -->
